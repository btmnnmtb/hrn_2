<Window x:Class="hrn_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hrn_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>



        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>


        </Grid.ColumnDefinitions>

        <DataGrid x:Name ="table_2" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="3" SelectionChanged="table_2_SelectionChanged"/>
        <TextBox x:Name="tex" Grid.Column="2"/>
        <Button  Grid.Column="2" Grid.Row="1" Content="добавить" Click="Button_Click" Grid.RowSpan="2"/>
        <Button  Grid.Column="3" Grid.Row="1" Content="Изменить " Click="Button_Click_1" Grid.ColumnSpan="3"/>
        <Button  Grid.Column="3" Grid.Row="0" Content="Удалить" Click="Button_Click_2" Grid.ColumnSpan="3"/>
        <Button  Grid.Column="3" Grid.Row="2" Content="След окно" Click="Button_Click_3" Grid.ColumnSpan="3"/>


    </Grid>
</Window>
